generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum UserRole {
  STUDENT
  TEACHER
}

enum WeekDay {
  MON
  TUE
  WED
  THU
  FRI
  SAT
  SUN
}

model waitlist {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  createdAt DateTime @default(now())
}

model User {
  id          Int    @id @default(autoincrement())
  clerkUserId String @unique

  email     String    @unique
  firstName String?
  lastName  String?
  imageUrl  String?
  role      UserRole?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  student Student?
  teacher Teacher?
}

model Student {
  id        Int     @id @default(autoincrement())
  userId    Int     @unique
  teacherId Int
  user      User    @relation(fields: [userId], references: [id])
  teacher   Teacher @relation(fields: [teacherId], references: [userId])

  grade  String?
  school String?
  board  String?
  fees   Int?

  numOfClassesPerWeek Int?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  assignments             SlotAssignment[]
  recurringDayAssignments RecurringDayAssignment[]
  payments                Payment[]
}

model Teacher {
  id      Int       @id @default(autoincrement())
  userId  Int       @unique
  user    User      @relation(fields: [userId], references: [id])
  Student Student[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  slots              Slot[]
  recurringSchedules RecurringSchedule[]
}

model Slot {
  id Int @id @default(autoincrement())

  teacherId Int
  teacher   Teacher @relation(fields: [teacherId], references: [id])

  startTime DateTime
  endTime   DateTime

  maxStudents Int

  createdAt DateTime @default(now())

  assignments SlotAssignment[]
}

model SlotAssignment {
  id Int @id @default(autoincrement())

  slotId Int
  slot   Slot @relation(fields: [slotId], references: [id])

  studentId Int
  student   Student @relation(fields: [studentId], references: [id])

  assignedAt DateTime @default(now())

  @@unique([slotId, studentId])
}

model RecurringSchedule {
  id Int @id @default(autoincrement())

  teacherId Int
  teacher   Teacher @relation(fields: [teacherId], references: [id])

  startTime DateTime
  endTime   DateTime

  startDate DateTime
  endDate   DateTime?

  maxStudents Int

  days       RecurringDay[]
  exceptions RecurringException[]

  createdAt               DateTime                 @default(now())
  recurringDayAssignments RecurringDayAssignment[]
}

model RecurringDay {
  id Int @id @default(autoincrement())

  recurringScheduleId Int
  recurringSchedule   RecurringSchedule @relation(fields: [recurringScheduleId], references: [id], onDelete: Cascade)
  day                 WeekDay
}

model RecurringException {
  id Int @id @default(autoincrement())

  recurringScheduleId Int
  recurringSchedule   RecurringSchedule @relation(fields: [recurringScheduleId], references: [id], onDelete: Cascade)

  date DateTime // the day to skip

  startTime DateTime?
  endTime   DateTime?

  createdAt DateTime @default(now())

  @@unique([recurringScheduleId, date])
}

model RecurringDayAssignment {
  id Int @id @default(autoincrement())

  recurringScheduleId Int
  recurringSchedule   RecurringSchedule @relation(fields: [recurringScheduleId], references: [id], onDelete: Cascade)

  day WeekDay

  studentId Int
  student   Student @relation(fields: [studentId], references: [id])

  assignedAt DateTime @default(now())

  @@unique([recurringScheduleId, day, studentId])
  @@index([recurringScheduleId, day])
}

model Payment {
  id Int @id @default(autoincrement())

  studentId Int
  student   Student @relation(fields: [studentId], references: [id], onDelete: Cascade)

  month Int
  year  Int

  paidAt DateTime @default(now())

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([studentId, year, month])
  @@index([year, month])
}
